<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iguest.quizdroidpart1" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".QuizApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ManagerActivity"
            android:label="@string/title_activity_manager" >
        </activity>

        <application android:name=".QuizApp" />

        <activity
            android:name=".UserSettingActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <receiver android:name=".AlarmReceiver"/>
        <service android:enabled="true" android:name=".DownloadService" />

    </application>

</manifest>
